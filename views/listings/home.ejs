  }

  .gallery-section {
    margin-top: 3rem;
  }

  .gallery-section h2 {
    font-weight: bold;
    margin-bottom: 2rem;
    text-align: center;
  }

  .gallery-img-container {
    position: relative;
    overflow: hidden;
    border-radius: 10px;
    height: 250px;
  }

  .gallery-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease-in-out;
  }

  .gallery-img:hover {
    transform: scale(1.05);
  }

  .gallery-caption {
    position: absolute;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    width: 100%;
    text-align: center;
    color: white;
    font-weight: 500;
    padding: 0.4rem;
  }
