  margin-bottom: 1rem;
 
}


  .hero-section p {
    font-size: 1.3rem;
    max-width: 700px;
    margin-bottom: 2rem;
  }

  .btn-custom {
    padding: 0.7rem 1.5rem;
    font-weight: 500;
    font-size: 1rem;
    border-radius: 8px;
  }

  .features-section {
    margin: 5rem 0;
